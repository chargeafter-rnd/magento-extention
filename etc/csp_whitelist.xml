<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="chargeafter-cdn-sandbox" type="host">https://cdn-sandbox.ca-dev.co</value>
                <value id="chargeafter-cdn-prod" type="host">https://cdn.chargeafter.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="chargeafter-cdn-sandbox" type="host">https://cdn-sandbox.ca-dev.co</value>
                <value id="chargeafter-cdn-prod" type="host">https://cdn.chargeafter.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="chargeafter-sandbox" type="host">*.ca-dev.co</value>
                <value id="chargeafter-prod" type="host">*.chargeafter.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="chargeafter-sandbox" type="host">*.ca-dev.co</value>
                <value id="chargeafter-prod" type="host">*.chargeafter.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
